<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>servlets.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewTrainer</servlet-name>
        <servlet-class>servlets.NewTrainer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewPokemon</servlet-name>
        <servlet-class>servlets.NewPokemon</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePokemon</servlet-name>
        <servlet-class>servlets.DeletePokemon</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaPokemon</servlet-name>
        <servlet-class>servlets.ListaPokemon</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RankingTrainers</servlet-name>
        <servlet-class>servlets.RankingTrainers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MejorarVida</servlet-name>
        <servlet-class>servlets.MejorarVida</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewTrainer</servlet-name>
        <url-pattern>/NewTrainer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewPokemon</servlet-name>
        <url-pattern>/NewPokemon</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePokemon</servlet-name>
        <url-pattern>/DeletePokemon</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaPokemon</servlet-name>
        <url-pattern>/ListaPokemon</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RankingTrainers</servlet-name>
        <url-pattern>/RankingTrainers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MejorarVida</servlet-name>
        <url-pattern>/MejorarVida</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
